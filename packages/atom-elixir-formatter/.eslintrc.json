{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "no-trailing-spaces": ["error"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "space-in-parens": ["warn", "never"]
  }
}
